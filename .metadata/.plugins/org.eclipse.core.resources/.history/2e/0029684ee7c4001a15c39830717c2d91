// https://programmers.co.kr/learn/courses/30/lessons/42585
package Programmers;

import java.util.*;

public class SQ04 {
	public static int solution(String arrangement) {
		Stack<Boolean> stack = new Stack<>();
		char[] arr = arrangement.toCharArray();
		int answer = 0;
		for (int i = 0; i < arr.length; i++) {
			if (arr[i] == '(') {
				stack.push(true);
			}
			else {
				stack.pop();
				if (arr[i-1] == '(')
					answer += stack.size();
				else
					answer++;
			}
		}
		return answer;
	}
}
